
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shread/_Layout.cshtml";
}

<div class="header-text">
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
              <div class="text-center" style="margin-top:10px;"><h2 style="color: #ff7c4d">İLETİŞİM TALEP FORMU</h2></div><br>
                <p style="font-weight: 400; margin-right:10px; font-family:'Poppins', sans-serif; ">
                    <span style="font-size: 15px">
                        E-fatura sistemi hakkında her türlü bilgi, destek ve önerilerinizi form ile bize gönderebilirsiniz.
                        <br>Operatörlerimiz en kısa zamanda sizinle iletişime geçecektir.
                    </span>
                </p>
            </div>
            @model CepteFaturaMvc.Models.Email
            <center>
                <form action="forms/contact.php" method="post" role="form" class="php-email-form col-lg-9">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="ad" class="form-control" id="ad" style="color:#5786b4;border:2px solid #ced4da;" placeholder="Adınız Soyadınız:" data-rule="" data-msg="Lütfen Boş Bırakmayınız.">
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" class="form-control" name="email" id="email" style="color:#5786b4;border:2px solid #ced4da;" placeholder="E-Mail Adresiniz:" data-rule="email" data-msg="Lütfen Boş Bırakmayınız.">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="telefon" class="form-control" id="telefon" style="color:#5786b4;border:2px solid #ced4da;" placeholder="Telefon:" data-rule="minlen:4" data-msg="Lütfen Boş Bırakmayınız.">
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="text" class="form-control" name="konu" id="konu" style="color:#5786b4;border:2px solid #ced4da;" placeholder="Konu:" data-rule="text" data-msg="Lütfen Boş Bırakmayınız.">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-12 form-group mt-3 mt-md-0">
                            <textarea id="mesaj" class="form-control" name="mesaj" rows="3" cols="50" style="color:#5786b4;border:2px solid #ced4da;" placeholder="İstek / Öneri" data-msg="Lütfen Boş Bırakmayınız."></textarea>
                        </div>
                    </div>
                    <div class="text-center" style="margin-top:30px"><button type="button" class="btn btn-success">Gönder</button></div>
                </form>
            </center>
            <div class="row contact-info">

                <div class="container">
                    <iframe style="border:0; border-radius:35px; width : 100%; height: 450px; margin-top:30px" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3015.6605690936153!2d31.170095215262524!3d40.90126003395237!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x409d7558c6d29949%3A0x332d4e256b968190!2sBilsoft!5e0!3m2!1str!2str!4v1621942997800!5m2!1str!2str" width="600" height="450"  allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
